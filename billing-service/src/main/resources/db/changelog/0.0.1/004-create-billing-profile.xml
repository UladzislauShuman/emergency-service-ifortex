<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="6-create-billing-profiles-table" author="uladzislau.shuman">
    <createTable tableName="billing_profiles">
      <column name="id" type="BIGSERIAL">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="user_id" type="BIGINT">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="stripe_customer_id" type="VARCHAR(255)"/>
      <column name="stripe_subscription_id" type="VARCHAR(255)"/>
      <column name="current_period_end" type="TIMESTAMP WITH TIME ZONE"/>
      <column name="current_plan_id" type="VARCHAR(255)"/>
    </createTable>

    <addUniqueConstraint tableName="billing_profiles" columnNames="stripe_customer_id"
      constraintName="uc_billing_profiles_stripe_customer_id"/>
    <addUniqueConstraint tableName="billing_profiles" columnNames="stripe_subscription_id"
      constraintName="uc_billing_profiles_stripe_subscription_id"/>
  </changeSet>
</databaseChangeLog>