<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="1-create-subscriptions-table" author="uladzislau.shuman">
    <createTable tableName="subscriptions">
      <column name="id" type="BIGSERIAL">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="user_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="plan_id" type="INT">
        <constraints nullable="false"
          foreignKeyName="fk_subscriptions_on_plan"
          referencedTableName="plans"
          referencedColumnNames="id"/>
      </column>
      <column name="status" type="VARCHAR(50)">
        <constraints nullable="false"/> 
      </column>
      <column name="starts_at" type="TIMESTAMP WITH TIME ZONE">
        <constraints nullable="false"/>
      </column>
      <column name="ends_at" type="TIMESTAMP WITH TIME ZONE">
        <constraints nullable="false"/>
      </column>
      <column name="canceled_at" type="TIMESTAMP WITH TIME ZONE"/>
    </createTable>
  </changeSet>

  <changeSet id="2-refactor-billing-profiles" author="uladzislau.shuman">
    <dropColumn tableName="billing_profiles" columnName="stripe_subscription_id"/>
    <dropColumn tableName="billing_profiles" columnName="current_period_end"/>
    <dropColumn tableName="billing_profiles" columnName="current_plan_id"/>
  </changeSet>

</databaseChangeLog>